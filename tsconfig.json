{
    "compilerOptions": {
        "target": "es2021",
        "module": "es2022",
        "moduleResolution": "node",
        "alwaysStrict": true,
        "allowJs": true,
        "checkJs": true,
        "noEmit": true,
        "noUnusedLocals": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "declaration": false,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "maxNodeModuleJsDepth": 0,
        "skipLibCheck": true
    },
    "include": ["types.d.ts", "schema", "e2e", "scripts", "shared/js", "integration-tests"]
}
